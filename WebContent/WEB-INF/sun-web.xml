<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sun-web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Application Server 9.0 Servlet 2.5//EN" "http://www.sun.com/software/appserver/dtds/sun-web-app_2_5-0.dtd">
<sun-web-app error-url="">
  <context-root>/WebExample</context-root>
  <class-loader delegate="true"/>
  <jsp-config>
    <property name="keepgenerated" value="true">
      <description>Keep a copy of the generated servlet class java code.</description>
    </property>
  </jsp-config>
  <!--
  	Чтобы корректно обрабатывались юникодные символы, введённые в формах.
  	См. <http://java.sun.com/developer/technicalArticles/Intl/HTTPCharset/>, раздел Web Server Processing.
  	Это решение некроссплатформенное (не для всех серверов приложений!), но для Glassfish работает.
  -->
  <parameter-encoding default-charset="UTF-8"/>
</sun-web-app>
